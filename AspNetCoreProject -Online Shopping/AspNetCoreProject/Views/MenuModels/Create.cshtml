@model AspNetCoreProject.Models.MenuModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>MenuModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
              
            
                @{

                    List<MenuHelperModel> menuHelpers = (List<MenuHelperModel>)ViewData["MenuHelper"];
                }


                <label asp-for="MenuHelperModelId" class="control-label"></label>
                <select name="MenuHelperModelId"
                        asp-items="@(new SelectList(menuHelpers, "Id", "Con_Act_Name"))">
                </select>

            </div>
            <div class="form-group">



                @{

                    List<ApplicationRole> RollList = (List<ApplicationRole>)ViewData["RollList"];
                }


                <label asp-for="RollId" class="control-label"></label>
                <select name="RollId"
                        asp-items="@(new SelectList(RollList, "Id", "Name"))">
                </select>


            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

